BUILDROOT ?=
DESTDIR ?=${BUILDROOT}
export MSCHED_HOME=${DESTDIR}@SPOOLDIR@
export INST_DIR=${DESTDIR}@prefix@
export OPSYS=@OPSYS@
export OS=@OS@
export CC=@CC@
export OSCCFLAGS=@CFLAGS@
export OSLDFLAGS=@LDFLAGS@

#SECDEC =-D__MMD5 -D__MOPENSSL
#SECLIB =-lcrypto -lssl

# ============================
# Resource Manager section
